  <h1>1d20</h1>
<ul>
  <% @rolls.each do |a_roll| %>
    <li>
      <%= a_roll %>
    </li>
  <% end %>
</ul>

<% if @die == 1 %>
  <p style="color: red"><%= @die %></p>
<% elsif @die == 20 %>
  <p style="color: green"><%= @die %></p>
<% else %>
  <p><%= @die %></p>
<% end %>

<h3>Sum: <%= @outcome %></h3>

